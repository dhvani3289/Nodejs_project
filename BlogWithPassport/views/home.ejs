<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<style>
    .container {
        width: 1240px;
        margin: 0px auto;
        padding-left: 15px;
        padding-right: 15px;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        margin-left: -15px;
        margin-right: -15px;
    }

    .row a {
        display: inline;
    }

    .col-4 {
        width: 33.33%;
    }

    h2 {
        margin: 0;
    }

    .header-bottom {
        background-color: rgba(128, 128, 128, 0.212);
        height: 50px;
        display: flex;
        flex-wrap: wrap;
        gap: 25px;
        align-items: center;
        margin-bottom: 25px;
    }

    .header-bottom a:first-child {
        margin-left: 10px;
    }

    .header-bottom a,
    .header-bottom button {
        font-size: 18px;
        font-weight: 500;
        color: rgba(0, 0, 0, 0.763);
        font-family: 'Times New Roman', Times, serif;
    }

    .header-bottom a:hover,
    .header-bottom button:hover {
        border-bottom: 1px solid black;
    }


    /* Blog Card */
    .blog-card-wrap {
        color: black;
        margin: 5px;
        box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
        background-color: #fff;
        border-radius: 5px;
        overflow: hidden;
    }

    /* Blog Image */
    .blog-img img {
        height: 200px;
        width: 100%;
        object-fit: contain;
    }

    .blog-content {
        padding: 10px;
    }

    /* Title Styling */
    .title h2 {
        font-size: 22px;
        margin: 10px 0;
        font-weight: bold;
        color: #333;
    }

    /* authorNameDate Styling (Author and Date) */
    .authorNameDate {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 16px;
        color: rgb(130, 130, 130);
        margin: 10px 0;
    }

    .authorNameDate .bloggerName {
        font-weight: bold;
        text-transform: capitalize;
    }

    .authorNameDate .blogDate {
        font-style: italic;
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow: hidden;
    }

    .category {
        font-size: 18px;
        font-weight: bold;
        color: #007bff;
        margin: 5px 0;
        text-transform: capitalize;
    }

    /* Description */
    .blog-description {
        font-size: 16px;
        color: #555;
        line-height: 1.6;
        margin: 10px 0;
    }

    /* Actions */
    .actions {
        display: flex;
        justify-content: end;
        gap: 10px;
        margin-top: 15px;
    }

    .actions a {
        text-decoration: none;
        color: white;
        background-color: #007bff;
        padding: 8px 12px;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .actions a:hover {
        background-color: #0056b3;
    }
</style>

<body>
    <%- include('header.ejs') %>
        <div class="container">
            <div class="row">
                <% allBlogs.map((val,index)=>{%>
                    <div class="col-4">
                        <div class="blog-card-wrap">
                            <div class="blog-img">
                                <img src="<%=val.blogImage%>" />
                            </div>
                            <div class="blog-content">
                                <!-- Title -->
                                <div class="title">
                                    <h2>
                                        <%=val.title%>
                                    </h2>
                                </div>

                                <div class="authorNameDate">
                                    <span class="bloggerName">
                                        <%=val.author%>
                                    </span>
                                    <span class="blogDate">
                                        <%=val.blogDate%>
                                    </span>
                                </div>

                                <!-- Category -->
                                <h3 class="category">
                                    <%=val.category%>
                                </h3>

                                <!-- Description -->
                                <div class="blog-description">
                                    <%=val.description%>
                                </div>

                                <!-- Actions -->
                                <div class="actions">
                                    <a href="/admin/editBlog/<%=val._id%>">Update</a>
                                    <a href="/admin/deleteBlog/<%=val._id%>">Delete</a>
                                </div>
                            </div>
                        </div>

                    </div>
                    <%}) %>
            </div>
        </div>
</body>



</html>